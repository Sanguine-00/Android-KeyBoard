<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/app_car_palate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/app_car_palate_province"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:text="苏"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/app_car_palate_char"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:text="A"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/app_car_palate_1"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="1" />

        <RadioButton
            android:id="@+id/app_car_palate_2"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="2" />

        <RadioButton
            android:id="@+id/app_car_palate_3"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="3" />

        <RadioButton
            android:id="@+id/app_car_palate_4"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="4" />

        <RadioButton
            android:id="@+id/app_car_palate_5"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="5" />

        <RadioButton
            android:id="@+id/app_car_palate_new"
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_selector_rb_bg"
            android:button="@null"
            android:ems="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="新能源"
            android:textColor="#000000"
            android:textSize="12sp" />


    </RadioGroup>

    <RelativeLayout
        android:id="@+id/app_car_palate_keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/app_car_palate_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#efefef" />


    </RelativeLayout>

</RelativeLayout>